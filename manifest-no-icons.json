{
  "manifest_version": 3,
  "name": "闲鱼数据采集助手",
  "version": "1.0.0",
  "description": "闲鱼商品数据采集Chrome插件",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://h5api.m.goofish.com/*",
    "https://www.goofish.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.goofish.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://www.goofish.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
